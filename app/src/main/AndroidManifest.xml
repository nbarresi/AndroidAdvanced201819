<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidadvanced201819">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name="org.its.services.GpsTracker" android:exported="false"/>

        <activity
            android:name="org.its.Activity.AppListActivity"
            android:label="@string/App"></activity>

        <activity
            android:name="org.its.Activity.LoginActivity"
            android:label="@string/login"></activity>

        <activity
            android:name="org.its.Activity.ListActivity"
            android:label="@string/profili">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity
            android:name="org.its.Activity.DetailActivity"
            android:label="@string/detail"></activity>

        <activity
            android:name="org.its.Activity.MapActivity"
            android:label="@string/mappa"></activity>

        <activity
            android:name="org.its.Activity.WifiActivity"
            android:label="@string/wifi_label"></activity>

        <activity android:name="org.its.Activity.NfcActivity" android:label="@string/nfc_label" />

        <receiver android:name="org.its.receiver.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <uses-library android:name="com.google.android.maps" />
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false"></uses-library>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDxkQPZB4hPpSVzvbQrAOpVjVeCm7FkrqQ" />


    </application>
</manifest>
