        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCyPT-NFBaVdXM9m495C8V4uHruBsH4lb8" />

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main">
