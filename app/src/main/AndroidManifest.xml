                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".activities.ListaProfiliActivity"
            android:label="@string/title_activity_list_profile"
